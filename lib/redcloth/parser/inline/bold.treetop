require File.dirname(__FILE__) + "/common_inline"

module RedCloth
  module Parser
    module Inline
      grammar Bold
        include CommonInline
        
        rule bold
          '**' contents:inline end_bold {
            def build(filter)
              Ast::Element.new(
                {:type => :bold},
                contents.build(filter)
              )
            end
          }
        end
        
      end
    end
  end
end